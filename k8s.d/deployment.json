{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "name": "g2-akka-nucleus-deployment"
  },
  "spec": {
    "replicas": 2,
    "template": {
      "metadata": {
        "labels": {
          "app": "g2-akka-nucleus",
          "zone": "bb-hsec"
        }
      },
      "spec": {
        "containers": [
          {
            "image": "",
            "name": "akka-nucleus",
            "ports": [
              {
                "containerPort": 2552
              },
              {
                "containerPort": 6000
              },
              {
                "containerPort": 9443
              }
            ],
            "env": [
              {
                "name": "APP_ID",
                "value": "akka-nucleus"
              },
              {
                "name": "ENVIRONMENT",
                "value": "dev"
              },
              {
                "name": "STACK",
                "value": "default"
              },
              {
                "name": "REGION",
                "value": "us"
              },
              {
                "name": "DATACENTER",
                "value": "at4-dev-proc"
              }
            ]
          }
        ],
        "imagePullSecrets": [
          {
            "name": "registry-docker-ci"
          }
        ]
      }
    }
  }
}